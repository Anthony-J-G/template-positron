{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "build",
      "rootDir": "./",
      "baseUrl": "./",
      "paths": {
        "@/*": ["electron/*"],
      },
      "allowJs": true,  // Enable JS files to be processed
      "checkJs": false  // Disable type-checking on JS files
    },
    "include": [
      "electron/**/*",
    ],
    "exclude": ["node_modules"]
  }
    
  